<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info',user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @books %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.favorited_by?(current_user) %>
              <%= link_to book_favorites_path(@book), method: :delete do %>
              ♥<%= @book.favorites.count %>
              <% end %>
            <% else %>
              <%= link_to book_favorites_path(@book), method: :post do %>
              ♡<%= @book.favorites.count %>
              <% end%>
            <% end %>
          </td>
          <td>
            <%= link_to "#{@book.book_comments.count}コメント", book_path(@book.id) %>
          </td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>

        <tr>
          <td>
            <p><%= @book.book_comments.count %>コメント</p>
            <% @book.book_comments.each do |book_comment| %>
              <p><%= image_tag book_comment.user.get_profile_image, size:"100x100" %></p>
              <%= book_comment.user.name %>
              <%= book_comment.comment %>
              <% if book_comment.user == current_user %>
              <%= link_to "削除", book_book_comment_path(book_comment.book,book_comment), method: :delete %>
              <% end %>
            <% end %>
          </td>
        </tr>
      </table>
      <%= form_with model: [@book,@book_comment] do |f| %>
      <div class="form-group">
        <%= f.text_area :comment, class: "form-control book_body" %>
      </div>
      <div class="form-group">
        <%= f.submit "送信" %>
      </div>
      <% end %>
    </div>
  </div>
</div>